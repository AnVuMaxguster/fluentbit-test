#!/bin/sh -e

libdir="/home/htcg/fluentbit/fluent-bit/build/lib/nghttp2/lib"
if [ -d "$libdir/.libs" ]; then
    libdir="$libdir/.libs"
fi

export CGO_CFLAGS="-I/home/htcg/fluentbit/fluent-bit/lib/nghttp2/lib/includes -I/home/htcg/fluentbit/fluent-bit/build/lib/nghttp2/lib/includes "
export CGO_CPPFLAGS=""
export CGO_LDFLAGS="-L$libdir "
export LD_LIBRARY_PATH="$libdir"
export GODEBUG=cgocheck=0
"$@"
